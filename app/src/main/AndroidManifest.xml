<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="secuso.org.privacyfriendlywifi">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name="org.secuso.privacyfriendlywifi.service.ManagerService"
            android:enabled="true"
            android:exported="false"/>

        <receiver android:name="org.secuso.privacyfriendlywifi.service.receivers.BootCompletedReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver android:name="org.secuso.privacyfriendlywifi.service.receivers.AlarmReceiver" />
        <receiver android:name="org.secuso.privacyfriendlywifi.service.WifiNotification$NotificationButtonListener" />
        <receiver android:name="org.secuso.privacyfriendlywifi.service.WifiNotification$NotificationClickListener" />
        <receiver android:name="org.secuso.privacyfriendlywifi.view.WifiWidget$WidgetClickListener" />
        <receiver android:name="org.secuso.privacyfriendlywifi.service.receivers.WifiChangedReceiver">
            <intent-filter android:priority="100">
                <action android:name="android.net.wifi.STATE_CHANGE" />
            </intent-filter>
        </receiver>

        <activity
            android:name="org.secuso.privacyfriendlywifi.view.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="org.secuso.privacyfriendlywifi.view.WifiWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/wifi_widget_info" />
        </receiver>

        <activity
            android:name="org.secuso.privacyfriendlywifi.view.HelpActivity"
            android:label="@string/title_activity_help"
            android:parentActivityName="org.secuso.privacyfriendlywifi.view.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.secuso.privacyfriendlywifi.view.MainActivity" />
        </activity>
    </application>

</manifest>